<%- include('partials/header'); -%>
<div class="homepage">
    <section id="title">
        <div class="container-fluid top-title">
            <!-- Nav Bar -->
            <%- include('partials/navbar'); -%>

            <!-- Title -->
            <div class="row">
                <div class="flex-column1">
                    <h1 class="big-heading">
                        Monitor your daily health easily.
                    </h1>
                </div>
                <div class="flex-column2">
                    <img
                        class="title-image"
                        src="/images/mockup.png"
                        alt="health-mockup"
                    />
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials -->

    <section id="testimonials">
        <div id="testimonial-carousel" class="carousel slide" data-ride="false">
            <div class="carousel-inner">
                <div class="carousel-item active container-fluid">
                    <h2 class="testimonial-text">
                        "Complete Physical Health Diary!"
                    </h2>
                    <em
                        >- Keep a track of your weight, height and BMI to ensure
                        an active life.</em
                    >
                </div>
                <div class="carousel-item container-fluid">
                    <h2 class="testimonial-text">
                        "Comprehensive Mental Diary!"
                    </h2>
                    <em
                        >Know your mental health with by tracking your emotions
                        and thoughts.</em
                    >
                </div>
            </div>
            <a
                class="carousel-control-prev"
                href="#testimonial-carousel"
                role="button"
                data-slide="prev"
            >
                <span
                    class="carousel-control-prev-icon"
                    aria-hidden="true"
                ></span>
                <span class="sr-only">Previous</span>
            </a>
            <a
                class="carousel-control-next"
                href="#testimonial-carousel"
                role="button"
                data-slide="next"
            >
                <span
                    class="carousel-control-next-icon"
                    aria-hidden="true"
                ></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>

    <!-- Features -->

    <section id="features">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4 feature-col">
                    <i class="fas fa-check-circle fa-4x"></i>
                    <h3 class="feature">Easy to use.</h3>
                    <p>So easy to use, everyone can keep a track.</p>
                </div>

                <div class="col-lg-4 feature-col">
                    <i class="fas fa-brain fa-4x"></i>
                    <h3 class="feature">Mental Health Aware</h3>
                    <p>
                        We understand today's struggle and its impact on your
                        mental health.
                    </p>
                </div>

                <div class="col-lg-4 feature-col">
                    <i class="fas fa-key fa-4x"></i>
                    <h3 class="feature">Secure.</h3>
                    <p>
                        Currently works on local machine and the data is only
                        stored on your machine.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->

    <section id="cta">
        <div class="container-fluid">
            <h3>
                Join today to ensure that you stay fit mentally and physically.
            </h3>
        </div>
    </section>
</div>

<%- include('partials/footer'); -%>
